var calculator = "It is Also Working";
var operator = prompt("enter a operator");
var number1 = Number(prompt("Enter a Number"));
var number2 = Number(prompt("Enter second number"));
if (operator === "+") {
var add = number1 + number2;
alert(`${number1} + ${number2} = ${add}`)
};
if (operator === "-") {
var minus = number1 - number2;
alert (`${number1} - ${number2} = ${minus}`)
};
if (operator === "*") {
var multiply = number1 * number2;
alert(`${number1} * ${number2} = ${multiply}`)
};
if (operator === "/") {
var divide = number1 / number2;
alert(`${number1} / ${number2} = ${divide}`)
};
console.log(calculator);

