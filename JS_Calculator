////////////////////////////////////////////////////////////

var Calculate = "Calculator is working"
var operators = prompt("Enter a operator +,-,*,/");
var number0 = Number(prompt("Enter first Number"));
var number00 = Number(prompt("Enter second Number"))
switch(operators) {
  case "+":
sum = number0 + number00
alert(`${number0} + ${number00} = ${sum}`);
break;
case "-":
subtract = number0 - number00
alert(`${number0} - ${number00} = ${subtract}`);
break;
case "*":
multiply = number0 * number00
alert(`${number0} * ${number00} = ${multiply}`);
break;
case "/":
divide = number0 / number00
alert(`${number0} / ${number00}  = ${divide}`);
break;
default:
alert("End");
break;
};
console.log(Calculate)


